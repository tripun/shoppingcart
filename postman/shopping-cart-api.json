{
  "info": {
    "name": "Shopping Cart API v1",
    "description": "API Version: 1.0\n\nThis collection includes all endpoints for the Shopping Cart API. All requests should include the 'X-API-Version' header set to '1.0'.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/auth/login",
            "header": [
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"user1\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "Shopping Cart",
      "item": [
        {
          "name": "Create Cart",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/cart",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ]
          }
        },
        {
          "name": "Add Item",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/cart/{{cartId}}/items",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"APPLE\",\n    \"quantity\": 2\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Calculate Total",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/cart/{{cartId}}/total",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ]
          }
        },
        {
          "name": "Checkout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/cart/{{cartId}}/checkout",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": "your-jwt-token-here"
    },
    {
      "key": "cartId",
      "value": "your-cart-id-here"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Automatically add API version header to all requests",
          "pm.request.headers.add({",
          "    key: 'X-API-Version',",
          "    value: '1.0'",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Verify API version header in response",
          "pm.test('Response should include API version header', function() {",
          "    pm.response.to.have.header('X-API-Version');",
          "    pm.expect(pm.response.headers.get('X-API-Version')).to.eql('1.0');",
          "});"
        ]
      }
    }
  ]
}
